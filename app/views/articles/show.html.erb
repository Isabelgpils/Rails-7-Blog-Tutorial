<div class= "article-page">
  <h1 ><%= @article.title %></h1>
  <p><%= @article.body %></p>
    <button><%= link_to "Edit Article", edit_article_path(@article) %></button>
    <button><%= link_to "Delete Article", article_path(@article), method: :delete %></button>

  <h2>Add a comment:</h2>
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>


</div>
