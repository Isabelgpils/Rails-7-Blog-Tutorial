<div class= "article-page">
  <h1 ><%= @article.title %></h1>
  <p><%= @article.body %></p>
  <button><%= link_to "Edit Article", edit_article_path(@article) %></button>
  <button><%= link_to "Delete Article", article_path(@article), method: :delete %></button>

  <div class= "comments-container nudge-down-50">
    <h2>Comments</h2>
    <% @article.comments.each do |comment| %>
      <h3 class="no-bottom-margin italic"><%= comment.commenter %></h3>
      <p class="italic no-top-margin"><%= comment.body %></p>

    <% end %>
  </div>

  <div class= "add-comment-container">
    <h2>Add a comment:</h2>
    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
      <p>
        <%= form.label :Name %><br>
        <%= form.text_field :commenter, size: 60%>
      </p>
      <p>
        <%= form.label :Comment %><br>
        <%= form.text_area :body, cols: 50, rows: 10 %>
      </p>
      <p>
        <%= form.submit %>
      </p>
    <% end %>
  </div>
</div>
